<div class="container">
 <!-- AUTHOR COLUMN -->
 <div class="author_column">
  <h1>My surveys</h1>
    <table>
      <% @my_surveys.each do |survey| %>
        <tr>
          <%= erb :_survey_render, :layout => false, :locals => { survey: survey } %>
          <td>
            <a href="/surveys/results/<%= survey.id %>">Results</a>
          </td>
        </tr>
      <% end %>
    </table>  
    <form action="/create" method="get">
      <input type='submit' value="Create">
    </form>
  </div>

  <!-- RESPONDENT COLUMN -->
  <div class="respondent_column"> 
  <h1>All surveys</h1>
    <!-- VIEW SURVEYS TO TAKE -->
    <table>
      <% @surveys.each do |survey| %>
        <tr>
          <%= erb :_survey_render, :layout => false, :locals => { survey: survey } %>
        </tr>
      <% end %>
    </table>
  </div>

</div>
